---
import { supabase } from "../lib/supabaseClient";
---

<html>
  <head><title>Subir Producto</title></head>
  <body>
    <h1>Subir nuevo producto</h1>
    <form id="uploadForm">
      <input
        type="text"
        name="nombre"
        placeholder="Nombre del producto"
        required
      />
      <input type="file" name="imagen" accept="image/*" required />
      <button type="submit">Subir</button>
    </form>

    <script type="module">
      document
        .querySelector("#uploadForm")
        .addEventListener("submit", async (e) => {
          e.preventDefault();
          const form = e.target;
          const nombre = form.nombre.value;
          const file = form.imagen.files[0];

          const reader = new FileReader();
          reader.onloadend = async () => {
            const base64 = reader.result.split(",")[1];

            const res = await fetch("/api/productos/upload", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ nombre, base64, filename: file.name }),
            });

            const data = await res.json();
            alert(data.message || JSON.stringify(data));
          };

          reader.readAsDataURL(file);
        });
    </script>
  </body>
</html>
